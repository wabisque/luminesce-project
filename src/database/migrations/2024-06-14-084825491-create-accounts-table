CREATE TABLE IF NOT EXISTS `accounts`
  (
    `id` INT UNSIGNED AUTO_INCREMENT NOT NULL,
    `uuid` VARCHAR(64) NOT NULL,
    `name` VARCHAR(255) NOT NULL,
    `account_type_id` INT UNSIGNED NOT NULL,
    `currency_id` INT UNSIGNED NOT NULL,
    `user_id` INT UNSIGNED NOT NULL,
    `created_at` TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
    `updated_at` TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
    CONSTRAINT `accounts_id_primary_key` PRIMARY KEY (`id`),
    CONSTRAINT `accounts_uuid_unique_key` UNIQUE (`uuid`),
    CONSTRAINT `currency_id_foreign_key` FOREIGN KEY (`currency_id`) REFERENCES `currencies` (`id`),
    CONSTRAINT `account_type_id_foreign_key` FOREIGN KEY (`account_type_id`) REFERENCES `account_types` (`id`) ON DELETE CASCADE ON UPDATE CASCADE
  ) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8;

