CREATE TABLE IF NOT EXISTS `tokens`
  (
    `id` INT UNSIGNED AUTO_INCREMENT NOT NULL,
    `uuid` VARCHAR(64) NOT NULL,
    `text` VARCHAR(64) NOT NULL,
    `device_id` INT UNSIGNED NOT NULL,
    `created_at` TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP,
    `updated_at` TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP,
    CONSTRAINT `tokens_id_primary_key` PRIMARY KEY (`id`),
    CONSTRAINT `tokens_uuid_unique_key` UNIQUE (`uuid`),
    CONSTRAINT `tokens_text_unique_key` UNIQUE (`text`),
    CONSTRAINT `tokens_device_id_foreign_key` FOREIGN KEY (`device_id`) REFERENCES `devices` (`id`) ON DELETE CASCADE ON UPDATE CASCADE
  ) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8;

